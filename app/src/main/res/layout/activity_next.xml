<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#000000"
    android:layout_height="match_parent"
    tools:context=".NextActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="#F5B109"
        android:fontFamily="@font/amiko_bold"
        android:gravity="center"
        android:textColor="#000000"
        android:text="title"
        android:textSize="50dp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_below="@+id/title"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/progressbar"
                android:layout_centerHorizontal="true"
                android:tooltipText="Loading poster"
                android:layout_marginTop="20dp"/>

            <ImageView
                android:layout_width="300dp"
                android:layout_marginTop="30dp"
                android:layout_centerHorizontal="true"
                android:layout_height="400dp"
                android:id="@+id/imageview"
                />
            <TextView
                android:id="@+id/plot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageview"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/amiko"
                android:text="plot"
                android:textColor="#F5B109"
                android:textSize="30dp" />



            <TextView
                android:id="@+id/length"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/plot"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/amiko_semibold"
                android:text="plot"
                android:textColor="#F5B109"
                android:textSize="20dp" />

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/length"
                android:scaleX="2.25"
                android:scaleY="2.25"
                android:numStars="10"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_marginTop="60dp"
                android:id="@+id/rb"/>


            <TextView
                android:id="@+id/rating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rb"
                android:layout_marginTop="10dp"
                android:paddingLeft="13dp"
                android:fontFamily="@font/amiko"
                android:text="rating"
                android:textColor="#F5B109"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/ratingVotes"
                android:layout_width="match_parent"
                android:paddingLeft="13dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rating"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/amiko"
                android:text="ratingVotes"
                android:textColor="#F5B109"
                android:textSize="30dp" />

            <Button
                android:id="@+id/cast1"
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:layout_below="@id/ratingVotes"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="60dp"
                android:background="@drawable/round_button"
                android:fontFamily="@font/amiko_semibold"
                android:text="CAST"
                android:textColor="#000000"
                android:textSize="35dp" />

            <TextView
                android:id="@+id/cast"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cast1"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/amiko_semibold"
                android:text="cast"
                android:textColor="#F5B109"
                android:textSize="20dp" />

        </RelativeLayout>


    </ScrollView>



    <TextView
        android:id="@+id/sa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#F5B109"
        android:fontFamily="@font/amiko_bold"
        android:gravity="center"
        android:text="Add to watchlist?"
        android:textColor="#000000"
        android:textSize="25dp"
        android:textStyle="bold" />

</RelativeLayout>